<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <com.peter.pushupmenu.view.ScalableTextView
        android:id="@+id/plus_share"
        style="@style/PlusTextViewStyle"
        android:layout_marginBottom="@dimen/tab_90_216"
        android:layout_marginRight="@dimen/tab_30"
        android:layout_toLeftOf="@+id/plus_group"
        android:drawableTop="@mipmap/menu_icon_camera"
        android:text="班级分享" />


    <com.peter.pushupmenu.view.ScalableTextView
        android:id="@+id/plus_group"
        style="@style/PlusTextViewStyle"
        android:layout_marginBottom="@dimen/tab_148_332"
        android:layout_toLeftOf="@+id/baseline"
        android:drawableTop="@mipmap/menu_icon_groupchat"
        android:text="发群聊" />


    <com.peter.pushupmenu.view.ScalableTextView
        android:id="@+id/plus_contact"
        style="@style/PlusTextViewStyle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/tab_148_332"
        android:layout_toRightOf="@+id/baseline"
        android:drawableTop="@mipmap/menu_icon_maillist"
        android:text="通讯录" />


    <com.peter.pushupmenu.view.ScalableTextView
        android:id="@+id/plus_leave"
        style="@style/PlusTextViewStyle"
        android:layout_marginBottom="@dimen/tab_90_216"
        android:layout_marginLeft="@dimen/tab_30"
        android:layout_toRightOf="@+id/plus_contact"
        android:drawableTop="@mipmap/menu_icon_leave"
        android:text="请假申请" />

    <View
        android:id="@+id/baseline"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ff0000"
        android:visibility="invisible"></View>



</RelativeLayout>